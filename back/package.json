{
  "name": "clean-architecture-boilerplate-back",
  "version": "0.0.4",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\"src/**/*.ts\\\" \\\"e2e/**/*.ts\\\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lintfix": "npm run lint -- --fix",
    "pretest": "npm run test:cleanArchitecture && npm run lint",
    "pretest:e2e": "rimraf e2e.sqlite",
    "test": "npm run test:cov && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config e2e/jest-e2e.json --runInBand",
    "test:cleanArchitecture": "./tools/check-clean-architecture.sh",
    "test:mutation": "stryker run",
    "pretypeorm": "ts-node -r tsconfig-paths/register database/write-ormconfig-for-migrations.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:run": "npm run typeorm -- migration:run -c schema"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.0.9",
    "@nestjs/core": "7.0.9",
    "@nestjs/platform-express": "7.0.9",
    "@nestjs/swagger": "4.5.4",
    "@nestjs/typeorm": "7.0.0",
    "change-case": "4.1.1",
    "class-validator": "0.12.2",
    "helmet": "3.22.0",
    "lodash": "4.17.15",
    "pg": "8.0.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "sqlite3": "4.2.0",
    "swagger-ui-express": "4.1.4",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.5",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.9",
    "@stryker-mutator/core": "3.1.0",
    "@stryker-mutator/html-reporter": "3.1.0",
    "@stryker-mutator/jest-runner": "3.1.0",
    "@stryker-mutator/typescript": "3.1.0",
    "@types/express": "4.17.6",
    "@types/faker": "4.1.11",
    "@types/hapi__joi": "16.0.12",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "@types/supertest": "2.0.9",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "jest": "25.5.4",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "25.4.0",
    "ts-loader": "7.0.2",
    "ts-node": "8.10.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  }
}
